{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "esnext",
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
        "@route-layer": ["./src/routes/index"],
        "@shared/*": ["./src/shared/*"]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "esnext",
      "dom"
    ]
  },
  "include": [
    "./server.ts",
    "src/**/*"
  ]
}